{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Amper Module Configuration",
  "type": "object",
  "properties": {
    "product": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "platforms": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      ]
    },
    "dependencies": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "additionalProperties": true
          }
        ]
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "kotlin": {
          "type": "object",
          "properties": {
            "serialization": { "type": "string" }
          }
        },
        "compose": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" }
          }
        }
      }
    }
  },
  "patternProperties": {
    "^dependencies@.*$": {
      "type": "array",
      "items": { "oneOf": [{ "type": "string" }, { "type": "object" }] }
    },
    "^settings@.*$": { "type": "object" }
  }
}
